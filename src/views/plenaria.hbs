<div class="container p-4">
    <div class="row">
        <div class="col-md-8">
            <iframe src="https://player.vimeo.com/video/431540912" allow="autoplay; fullscreen" allowfullscreen class="plenaria"></iframe>
            {{!-- <div style="padding:56.25% 0 0 0;position:relative;"><iframe
                    src="https://player.vimeo.com/video/343069249?title=0&byline=0&portrait=0"
                    style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0"
                    allow="autoplay; fullscreen" allowfullscreen></iframe></div> --}}
        </div>
        
        <form class="col-md-4">  
            <h5 class="text-center my-5">
                <i class="material-icons prefix">question_answer</i>
                Pregunta al experto
            </h5>
            <div class="input-field">
                <i class="material-icons prefix">mode_edit</i>
                <textarea id="question_expert" class="materialize-textarea"></textarea>
                <label for="question_expert">Escribe tu pregunta...</label>
                
                <div class="form-group center">
                    <button class="btn waves-effect waves-light mt-3 submit-expert" type="submit">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card _vote votacion hide animate__animated">
                <span class="card-title pregunta text-center mt-3 mb-2 flow-text"></span>
                <div class="card-content">            
                    <div class="collection"></div>
                    <div class="btn-floating reloj text-center halfway-fab">30</div>
                    <input type="hidden" id="reloj_cuenta" value="30">
                </div>
            </div>

            <div class="card _vote votacion-response hide animate__animated animate__fadeIn">
                <div class="card-title pregunta text-center my-4 flow-text"></div>
                <div class="respuestas"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h5 class="text-center my-5">
                <i class="material-icons prefix">cloud</i>
                Wordcloud
            </h5>
            <div class="input-field">
                <i class="material-icons prefix">mode_edit</i>
                <textarea id="wordcloud" class="materialize-textarea"></textarea>
                <label for="wordcloud">Escribe una palabra...</label>
                
                <div class="form-group center">
                    <button class="btn waves-effect waves-light mt-3 submit-wordcloud" type="submit">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-8 canvas-wordcloud">
            <canvas id="canvas" class="hide animate__animated animate__fadeIn mt-5">
                Your browser does not support the canvas tag.
            </canvas>
        </div>
    </div>
</div>

<script src="https://player.vimeo.com/api/player.js"></script>