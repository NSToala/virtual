<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>.:: Tanger-inc ::.</title>
    {{!-- Boostrap 4 --}}
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    {{!-- Styles --}}
    <link rel="stylesheet" type="text/css" href="/css/animate.min.css">
    <link rel="stylesheet" href="/css/styles.css">

    {{!-- Assets Unity --}}
    <link rel="stylesheet" href="/TemplateData/style.css">
</head>
<body>
    {{> navigation }}
    {{> message }}
    {{{ body }}}

    
    <input type="hidden" id="uid" value="{{user.id_user}}">
    <input type="hidden" id="username" value="{{user.username}}">
    <input type="hidden" id="fullname" value="{{user.fullname}}">

    <div id="slide-out" class="sidenav">
        <ul>
            <li>
                <div class="user-view">
                    <div class="background">
                        <img src="img/chat-background.png" />
                    </div>
                    <img class="circle" src="{{user.photo}}">
                    <span class="white-text name">{{user.fullname}}</span>
                    <span class="white-text email">{{user.email}}</span>
                </div>
            </li>
        </ul>
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="autocomplete-input" type="text">
          <label for="autocomplete-input">Buscar</label>
        </div>
        <ul>
            <li>
                <div class="divider"></div>
            </li>            
        </ul>
        <div class="users"></div>
    </div>
    
    {{!-- Scripts --}}
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>    
    <script src="https://unpkg.com/almete.wordcloud"></script>
    <script type="text/javascript" src="/js/wordcloud.js"></script>
    <script type="text/javascript" src="/js/chat.js"></script>
    <script src="/js/client.js"></script>

    {{!-- Assets Unity --}}
    <script src="/TemplateData/UnityProgress.js"></script>
    <script src="/Build/UnityLoader.js"></script>
    <script>
      var unityInstance = UnityLoader.instantiate("unityContainer", "Build/EXE.json", {onProgress: UnityProgress});
    </script>
</body>
</html>